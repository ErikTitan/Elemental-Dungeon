import pygame


class Player:
    def __init__(self, x, y):
        self.rect = pygame.Rect(x, y, 32, 32)
        self.speed = 5

    def move(self, dx, dy, walls):
        # Move in x direction
        self.rect.x += dx
        if self.check_collision(walls):
            self.rect.x -= dx

        # Move in y direction
        self.rect.y += dy
        if self.check_collision(walls):
            self.rect.y -= dy

    def check_collision(self, walls):
        return any(self.rect.colliderect(wall) for wall in walls)